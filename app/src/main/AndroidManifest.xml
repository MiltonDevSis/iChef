<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".presentation.presentation.IChefApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting"
        tools:targetApi="31"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".presentation.presentation.registration.RegistrationUserActivity"
            android:exported="false"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".presentation.presentation.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".presentation.presentation.intro.IntroActivity"
            android:exported="false"
            android:label="@string/title_activity_intro"
            android:theme="@style/Theme.AppCompat"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".presentation.presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>